package hvl.no;

	public class Kokk extends Thread {
	
	private HamburgerBrett brett;
	private String navn;
	
	public Kokk(HamburgerBrett brett, String navn) {
		this.brett = brett;
		this.navn = navn;
	}
	
	@Override
	public void run() {
		
		while (true) {
							
			try {
				Thread.sleep((long)(Math.random() * 1000));
				synchronized(brett) {
						
					while(brett.getAntBurgere() == 4) {
						try {
							brett.wait();
						} catch (InterruptedException e) {
							e.printStackTrace();
						}
					}
					brett.addBurger();
					printHandling();
					brett.notifyAll();
				}
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}			
		
	
	
	private void printHandling() {
		System.out.print(navn + " (kokk) legger på hamburger (|" + brett.getTotBurgere() + "|).");
		brett.printBrett();		
	}
}
