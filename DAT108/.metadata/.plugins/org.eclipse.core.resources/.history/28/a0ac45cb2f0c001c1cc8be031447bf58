package hvl.no;

import java.util.Random;

public class Kokk extends Thread {
	
	private HamburgerBrett brett;
	private String navn;
	
	public Kokk(HamburgerBrett brett, String navn) {
		this.brett = brett;
		this.navn = navn;
	}
	
	@Override
	public void run() {
		
		while (true) {
							
			try {
				
				int random = new Random().nextInt(6 - 2 + 1) + 2;
				Thread.sleep(random * 1000);
				synchronized(brett) {
						
					if (brett.getAntBurgere() == 4) {
						System.out.println(navn + " prøver å legge en burger på brettet, men brettet er fullt!");
						brett.wait();					
					} 
					brett.addBurger();
					printHandling();
					brett.notifyAll();
				}
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}			
			
	private void printHandling() {
		System.out.println(navn + " (kokk) legger på hamburger (|" + brett.getTotBurgere() + "|). " + brett.toString());			
	}
}
